extends layout

block content
  h1#header=title

  form(method='POST' action='')
    div.form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type='text' placeholder='First name (Christian)' name='first_name' required='true' value=(undefined===creator ? '' : creator.first_name) )
      label(for='last_name') Family Name:
      input#last_name.form-control(type='text' placeholder='Family name (Surname)' name='last_name' required='true' value=(undefined===creator ? '' : creator.last_name))
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg