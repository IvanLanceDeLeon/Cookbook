extends layout 

block content 
  h1#header #{title}

  form(method='POST' action='')
    div.form-group
      label(for='type') Type:
      input#type.form-control(type='text', placeholder='Vegan,Soup,Rice,etc' name='type' value=(undefined===type ? '' : type.type))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg